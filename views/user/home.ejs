<%- include('nav.ejs') %>
<style>
    /* Make the image fully responsive */
    .carousel-inner img {
      width: 100%;
      height: 100%;
    }
    </style>
<div id="demo" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ul class="carousel-indicators">
    <% for(i=0;i<slider_images.length;i++){ %>
      <li data-target="#demo" data-slide-to="<%=i%>" class="<% if(i==0) { %> active <% } %>"></li>
    <% } %>
    </ul>
    
    <!-- The slideshow -->
    <div class="carousel-inner">
        <% for(i=0;i<slider_images.length;i++){ %>
        <div class="carousel-item <% if(i==0) { %> active <% } %>">
          <img src="/uploads/<%=slider_images[i].slider_image%>" alt="Los Angeles" width="1100" height="500">
          <div class="carousel-caption">
            <h3><%=slider_images[i].slider_caption%></h3>
            <p>
                <a href="<%=slider_images[i].url%>">
                    <button class="btn btn-primary">OPEN NOW</button>
                </a>
            </p>
          </div>   
        </div>
        <% } %>
    </div>
    
    
    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
      <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
      <span class="carousel-control-next-icon"></span>
    </a>
  </div>

<br>
<br>
<h1 class="text-center">- Top Rated Products -</h1>
<br>
<div class="container">
  <div class="row">
    <% for(i=0;i<products.length;i++){ %>
    <div class="col-3">
      <div class="card">
        <img class="card-img-top w-100" src="/uploads/<%=products[i].product_image%>" alt="Card image" style="width:100%">
        <div class="card-body">
          <h5 class="card-title"><%=products[i].product_name%></h5>
          <p class="card-text">
              <big><b>&#8377; <%=products[i].product_price%></b></big>
              <del>&#8377; <%=products[i].duplicate_price%></del>
          </p>
          <a href="/view_product?product_id=<%=products[i].product_id%>" class="btn btn-primary">View product</a>
        </div>
      </div>


    </div>
    <% } %>
  </div>
</div>
<br>
