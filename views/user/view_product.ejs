<%- include('nav.ejs') %>
<br><br>
<div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-4">
            <img src="/uploads/<%=product.product_image%>" width="100%">
        </div>
        <div class="col-6">
            <h3>
                <%=product.product_name%>
            </h3>
            <h5><%=product.category_name%> / <%=product.sub_cat_name%> </h5>
            <h5>
                <big><b>&#8377; <%=product.product_price%></b></big>
                <del>&#8377; <%=product.duplicate_price%> /-</del>
            </h5>
            <h5>
                Rating : <%=product.product_rating%><i class="fa fa-star text-dark"></i>
                
            </h5>
            <p>
                <%=product.product_discription%>
            </p>
            <% if(!isincard) { %>
            <form action="/add_to_cart" method="get">
                <input type="hidden" name="product_id" value="<%=product.product_id%>">
                <input type="number"  name="qty" value="1" min="1" max="10" size="1">
                <button class="btn btn-primary" type="submit" name="btn" value="cart">
                    <i class="fa fa-shopping-cart"></i>
                    Add To Cart
                </button>
                <button class="btn btn-success" type="submit" name="btn" value="buy">
                    <i class="fa fa-rupee"></i>
                    Buy Now
                </button>
            </form>
            <% } %>
        </div>
    </div>
</div>
<br><br>
<%- include('footer.ejs') %>
