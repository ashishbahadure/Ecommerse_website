<%- include ('nav.ejs') %>
<form action="/admin/saveslider" method="post" enctype="multipart/form-data">
    <div class="container-fluid bg-white p-3">
        <div class="row">
            <div class="col-12">
                <h3 class="text-dark">ADD NEW SLIDER</h3>
            </div>
            <div class="col-6 mt-3">
                <label class="text-dark">SELECT IMAGE</label>
                <input type="file" name="slider_image" class="form-control" accept="image/*" required>
            </div>
            <div class="col-6 mt-3">
                <label class="text-dark">REDIRECTION URL</label>
                <input type="text" name="url" class="form-control" required>
            </div>
            <div class="col-12 mt-3 text-right">
                <button class="btn btn-primary">SAVE SLIDER</button>
            </div>
        </div>
    </div>
</form>
<br>
<div class="container-fluid bg-white p-3">
    <h3>Uploaded Sliders</h3>
<div class="row">
<% for(i=0;i<slider_images.length;i++) { %>
<div class="col-md-4 mt-3 mb-3">
    <img src="/uploads/<%=slider_images[i].slider_image%>" width="100%">
    <%=slider_images[i].url%>
</div>
<% } %>
</div>
</div>
